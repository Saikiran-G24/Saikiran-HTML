//replace a character of a string
let text="everyday communication becomes is the most importent in our daily life.each and everyday you can get more knowlwdge  by reading books"
let res=text.replace("everyday","Today")
console.log(res)
let res1=text.replaceAll("everyday","Today")
console.log(res1)
let holetext=text.replace('Goodmorning')
console.log("I think we couldn't replace entire string",holetext)


